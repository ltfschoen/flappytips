{
    "presets": [
        [
            "@babel/preset-env",
            {
                "modules": "auto",
                "targets": {
                    "node": "current"
                }
            }
        ],
        "@babel/preset-react"
    ],
    "sourceType": "module",
    // "ignore": [
    //     "/node_modules/"
    // ],
    "plugins": [
        [
            "module-resolver",
            {
                "root": [
                    "./server"
                ],
                "alias": {
                    "_game/index": "./server/game/index.js",
                    "_utils/waitUntil": "./server/utils/waitUntil.js",
                    "_api/getZeitgeistSDK": "./server/api/getZeitgeistSDK.js"
                }
            }
        ],
        [
            "babel-plugin-cjs-esm-interop",
            { "format": "cjs" }
        ]
    ]
}
